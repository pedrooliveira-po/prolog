    <script>
      document.addEventListener("DOMContentLoaded", () => {
        function carregarParceiros() {
          const carousel = document.getElementById("partnersCarousel");
          const parceiros = [
            "parceiro1.webp",
            "parceiro2.webp",
            "parceiro3.webp",
            "parceiro4.webp",
            "parceiro6.webp",
            "parceiro7.webp",
            "parceiro9.webp",
            "parceiro10.webp",
            "parceiro11.webp",
            "parceiro12.webp",
            "parceiro13.webp",
            "parceiro14.webp",
          ];

          let parceirosHTML = "";
          parceiros.forEach((parceiro) => {
            parceirosHTML += `
                        <div class="carousel-item flex-shrink-0 w-[150px] h-[150px] flex items-center justify-center">
                            <img src="/assets/images/parceiros/${parceiro}?v=<%= versao %>" 
                                 alt="Parceiro" 
                                 loading="lazy" 
                                 class="w-full h-full object-contain" />
                        </div>
                    `;
          });

          carousel.innerHTML = parceirosHTML + parceirosHTML;
        }

        carregarParceiros();
      });

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const caminhoAtual = window.location.pathname;
    const links = document.querySelectorAll("nav a");
    
    links.forEach(link => {
      const href = link.getAttribute("href");
      if (href === caminhoAtual || (href !== '/pt/inicio' && caminhoAtual.startsWith(href))) {
        link.classList.add("ativo");
      }
    });
    
    const idiomaAtual = caminhoAtual.startsWith('/pt') ? 'pt' : 'en';
    document.getElementById(`lang-${idiomaAtual}`).classList.add('current');
  });
  
  function switchLanguage(novoIdioma) {
    const caminhoAtual = window.location.pathname;
    let novoCaminho;
    
    if (caminhoAtual.startsWith('/en/')) {
      novoCaminho = caminhoAtual.replace('/en/', `/${novoIdioma}/`);
    } else if (caminhoAtual.startsWith('/pt/')) {
      novoCaminho = caminhoAtual.replace('/pt/', `/${novoIdioma}/`);
    } else {
      novoCaminho = `/${novoIdioma}${caminhoAtual}`;
    }
    
    window.location.href = novoCaminho;
  }
</script>